---
import { Image } from 'astro:assets';

interface Props {
  type: 'image' | 'video';
  src: string | ImageMetadata;
  alt?: string;
  width?: number;
  height?: number;
  posterSrc?: string;
}

const { 
  type, 
  src, 
  alt = "", 
  width = 1920, 
  height = 1080, 
  posterSrc 
} = Astro.props;
---
        
<div class="absolute inset-0 w-full h-full parallax-container">
  {type === 'image' ? (
    <Image
      src={src as ImageMetadata}
      alt={alt}
      width={width}
      height={height}
      class="object-cover w-full h-full parallax-image"
      loading="eager"
      />
      ) : (      <video
        class="object-cover w-full h-full parallax-video"
        autoplay
        loop
        muted
        playsinline
        preload="metadata"
        poster={posterSrc}
        aria-label="Hintergrundvideo: Seniorenpflege bei Integra"
      >
        <source src={src as string} type="video/webm" />
        <source src={src.replace('.webm', '.mp4')} type="video/mp4" />
        <p>Ihr Browser unterstützt keine Videos. Sie können unsere Inhalte trotzdem problemlos ansehen.</p>
      </video>
    )}
</div>