---
interface Props {
  title: string;
  description?: string;
  keywords?: string;
  image?: string;
  url?: string;
  type?: string;
  author?: string;
  lang?: string;
}

const { 
  title,
  description = "Professionelle Seniorenpflege und Betreuung mit erfahrenen Fachkr채ften. Wir bieten umfassende Pflegedienstleistungen f체r Senioren in ihrer gewohnten Umgebung.",
  keywords = "Seniorenpflege, Altenpflege, h채usliche Pflege, Pflegedienst, Betreuung Senioren, ambulante Pflege, Dortmund, NRW",
  image = "/assets/img/senior_woman_nurse.webp",
  url = Astro.url.toString(),
  type = "website",
  author = "Pflegedienst Integra Gerling GmbH",
  lang = "de"
} = Astro.props;

// SEO-optimized title with business name
const optimizedTitle = title.includes("Integra") ? title : `${title} | Pflegedienst Integra Gerling Dortmund`;
---

<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="author" content={author} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
  <meta name="language" content={lang} />
  <meta name="geo.region" content="DE-NW" />
  <meta name="geo.placename" content="Dortmund" />
  <meta name="geo.position" content="51.5136;7.4653" />
  <meta name="ICBM" content="51.5136, 7.4653" />
  
  <!-- Business Information -->
  <meta name="DC.title" content={optimizedTitle} />
  <meta name="DC.creator" content={author} />
  <meta name="DC.subject" content="Pflegedienst, Seniorenpflege, h채usliche Krankenpflege" />
  <meta name="DC.description" content={description} />
  <meta name="DC.publisher" content="Pflegedienst Integra Gerling GmbH" />
  <meta name="DC.type" content="service" />
  <meta name="DC.format" content="text/html" />
  <meta name="DC.identifier" content={url} />
  <meta name="DC.language" content={lang} />
  
  <!-- Accessibility -->
  <meta name="theme-color" content="#1e3a8a" />
  <meta name="color-scheme" content="light" />
  <meta name="msapplication-TileColor" content="#1e3a8a" />
  
  <!-- Enhanced Open Graph / Facebook -->
  <meta property="og:type" content={type} />
  <meta property="og:title" content={optimizedTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:locale" content="de_DE" />
  <meta property="og:site_name" content="Pflegedienst Integra Gerling GmbH" />
  <meta property="og:image" content={new URL(image, Astro.url).toString()} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:image:alt" content="Pflegedienst Integra Gerling - Professionelle Seniorenpflege in Dortmund" />
  <meta property="og:url" content={url} />
  
  <!-- Enhanced Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={optimizedTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(image, Astro.url).toString()} />
  <meta name="twitter:image:alt" content="Pflegedienst Integra Gerling - Professionelle Seniorenpflege in Dortmund" />
  <meta name="twitter:site" content="@integra_gerling" />
  <meta name="twitter:creator" content="@integra_gerling" />
  
  <!-- Additional SEO Meta Tags -->
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  <meta name="apple-mobile-web-app-title" content="Integra Gerling" />
  <meta name="application-name" content="Pflegedienst Integra Gerling" />
  <meta name="msapplication-config" content="/browserconfig.xml" />
  
  <!-- DNS Prefetch for performance -->
  <link rel="dns-prefetch" href="//fonts.googleapis.com" />
  <link rel="dns-prefetch" href="//fonts.gstatic.com" />
  <link rel="dns-prefetch" href="//cdnjs.cloudflare.com" />
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="canonical" href={url} />
  <meta name="generator" content={Astro.generator} />
  <title>{optimizedTitle}</title>

  <!-- Google Fonts with preload for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
    rel="stylesheet"
  />
  
  <!-- Skip to main content styles -->
  <style>
    .skip-link {
      position: absolute;
      top: -40px;
      left: 6px;
      background: #1e3a8a;
      color: white;
      padding: 8px;
      z-index: 100;
      text-decoration: none;
      border-radius: 4px;
    }
    .skip-link:focus {
      top: 6px;
    }
  </style>
</head>
